{
    "name": "firesphere/jobhunt",
    "type": "silverstripe-recipe",
    "description": "Jobhunting helper to keep track of job applications",
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "ext-libxml": "*",
        "3dgoo/silverstripe-hcaptcha": "^2",
        "dynamic/silverstripe-country-dropdown-field": "^2.0",
        "elliotsawyer/silverstripe-matomo": "^0.0.2",
        "firesphere/adblockwarning": "^1.0",
        "firesphere/cspheaders": "dev-main",
        "firesphere/haveibeenpwnd": "^2.1",
        "firesphere/module-helpers": "^0.4.0",
        "heyday/silverstripe-colorpalette": "^2.1|^3",
        "nzta/silverstripe-sitebanner": "^4.0",
        "phptek/sentry": "^5.0",
        "silverstripe/googlesitemaps": "^3.0",
        "silverstripe/login-forms": "~5.1.0@stable",
        "silverstripe/mfa": "^5",
        "silverstripe/recipe-cms": "~5.1.0@stable",
        "silverstripe/recipe-plugin": "~2.0.0@stable",
        "silverstripe/tagfield": "^3.1",
        "silverstripe/totp-authenticator": "^5",
        "silverstripe/vendor-plugin": "~2.0.1@stable",
        "silverstripe/webauthn-authenticator": "^5",
        "symbiote/silverstripe-gridfieldextensions": "^4.0",
        "symfony/mailjet-mailer": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.47",
        "lekoala/silverstripe-debugbar": "*",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "silverleague/ideannotator": "*"
    },
    "extra": {
        "project-files": [
            "app/_config/*",
            ".env.example",
            ".graphql-generated/*"
        ],
        "public-files": [
            "assets/*",
            "favicon.ico"
        ],
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "php-http/discovery": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
